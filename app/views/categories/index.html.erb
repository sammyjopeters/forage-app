<h1>All Categories</h1>

<table cellpadding="4" cellspacing="2">

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><p><%= category.name %></p></td>
        <td>
            <div class="btn-group btn-group-xs">
            <%= link_to 'Show', category, :class => 'btn btn-default' %></button>
            <%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-success' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
            </div>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => 'btn btn-default btn-sm' %>
