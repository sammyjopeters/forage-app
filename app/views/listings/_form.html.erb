<div class="form-group">
<%= form_for([@user, @listing]) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :location_state %><br>
    <%= f.text_field :location_state %>
  </div>
  <div class="field">
    <%= f.label :transaction_type %><br>
    <%= f.text_field :transaction_type %>
  </div>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.number_field :cost %>
  </div>
  <div class="field">
    <%= f.label :expiry %><br>
    <%= f.datetime_select :expiry %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => params[:id] %>
  </div>
  <div class="field">
    <%= f.label :pictures %><br>
    <%= f.text_field :pictures %>
  </div>
  <div class="field">
    <% f.hidden_field :sold, :value => false %>
  </div>
  <div class="field">
    <% f.hidden_field :sold_to, :value => 'No one yet!' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-danger' %>
  </div>
<% end %>
</div>
